{
  "tasks": {
    "bootstrap": "deno install -r",
    "dev:full": "deno task -f @diploma/server dev ",
    "web": "deno task -f @diploma/web"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "workspace": ["packages/*"],
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true
  },
  "lint": {
    "rules": {
      "exclude": ["jsx-button-has-type"]
    }
  }
}
